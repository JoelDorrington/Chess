<div style="position: relative;">
    <ul class="promotionMenu">
        @foreach(Piece.Type type in pieceTypes){
        <li @onclick="() => selectPromotionType(type)">
            <img src='@($"images/{type}{Colour}.png")' width="50px" height="50px" >
        </li>
        }
    </ul>
</div>

@code {
    private Piece.Type[] pieceTypes = { Piece.Type.Queen, Piece.Type.Rook, Piece.Type.Bishop, Piece.Type.Knight };

    [Parameter]
    public Piece.Colour Colour { get; set; }

    [Parameter]
    public EventCallback<Piece.Type> OnSelectType { get; set; }

    private void selectPromotionType(Piece.Type type)
    {
        OnSelectType.InvokeAsync(type);
    }
}
